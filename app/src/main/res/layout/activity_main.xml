<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_weight="0.8"
            android:contentDescription="@null"
            app:srcCompat="@mipmap/app_logo_noback" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Trivia Go Debug Menu"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/StartTheophane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="clickedChooseNextWaypointButtonXmlCallback"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:background="@drawable/button_shape_final"
            android:padding="10dp"
            android:stateListAnimator="@drawable/selector"
            android:text="Start Theophane" />

        <Button
            android:id="@+id/StartTrivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:background="@drawable/button_shape_final"
            android:padding="10dp"
            android:stateListAnimator="@drawable/selector"
            android:text="Start Trivia Question" />

        <Button
            android:id="@+id/StartLaurence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape_final"
            android:padding="10dp"
            android:onClick="clickedWelcomeActivityButtonXmlCallback"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:stateListAnimator="@drawable/selector"
            android:text="Start Laurence"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug-Debug buttons"
            />

        <Button
            android:id="@+id/goToCreateWaypointsButton"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:onClick="clickedGoToCreateWaypointsButtonXmlCallback"
            android:text="Go to CreateWaypoints" />

        <Button
            android:id="@+id/EndButton"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:onClick="clickedGoEndButtonXmlCallback"
            android:text="Go to END" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>